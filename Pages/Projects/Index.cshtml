@page
@model BizQuickTime.Web.Pages.Projects.IndexModel

@{
    ViewData["Title"] = "Projects";

    ViewData["ActivePage"] = BizQuickTime.Web.Pages.Shared.ManageNavPages.Projects;
}


<div class="box box-primary">
    <div class="box-header">
        <p>
            <a asp-page="Create">Create New</a>
        </p>
    </div>
        <div class="row box-body">
            <div class="col-xs-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Project[0].ProjectId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Project[0].Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Project[0].Currency)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Project[0].InvoicingCompanyId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Project[0].CompanyId)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Project)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProjectId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Currency)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InvoicingCompanyId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CompanyId)
                                </td>
                                <td>
                                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>